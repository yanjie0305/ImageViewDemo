<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈，我是主布局" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />
    </RelativeLayout>

    <fragment
        android:id="@+id/left_fragment"
        android:name="com.example.mydrawerlayout.fragment.LefetFragment"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"></fragment>

    <fragment
        android:id="@+id/right_fragment"
        android:name="com.example.mydrawerlayout.fragment.RightFragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"></fragment>
</android.support.v4.widget.DrawerLayout>
